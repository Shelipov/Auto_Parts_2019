@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Создать новый аккаунт.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" placeholder="Ваш email адрес" class="form-control" />
                <span asp-validation-for="Input.Email"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" placeholder="Ф.И.О.(без символов и тире)" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" placeholder="+380ХХ-ХХХ-ХХ-ХХ" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Country"></label>
                <input asp-for="Input.Country" placeholder='ТОВ "Моя Компания"' class="form-control" />
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Sity"></label>
                <input asp-for="Input.Sity" placeholder="Киев" class="form-control" />
                <span asp-validation-for="Input.Sity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Avenue"></label>
                <input asp-for="Input.Avenue" placeholder="ул. Шевченка 9" class="form-control" />
                <span asp-validation-for="Input.Avenue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Index"></label>
                <input asp-for="Input.Index" placeholder="00000" class="form-control" />
                <span asp-validation-for="Input.Index" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" placeholder="пароль" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" placeholder="подтверждение пароля" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Регистрация</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
